<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/button_to_change_units_bottom_sheet_start"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="Change Units"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/horizantal_straight_line_1"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_to_change_units_bottom_sheet_start" />

    <Button
        android:id="@+id/button_to_change_height_in_button_sheet"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="Change Height"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizantal_straight_line_1" />

    <View
        android:id="@+id/horizantal_straight_line_2"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_to_change_height_in_button_sheet" />

    <Button
        android:id="@+id/change_weight_for_sheet_weight_tracker"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="Change Start Weight"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizantal_straight_line_2" />

    <View
        android:id="@+id/horizantal_straight_line_3"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_weight_for_sheet_weight_tracker" />

    <Button
        android:id="@+id/change_goal_in_bottom_sheet_weight_tracker"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="Change Goal"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizantal_straight_line_3" />

    <TextView
        android:id="@+id/text_in_top_of_add_entry_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/choose_unit_for_weight_metric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/color_for_botton_off"
        android:text="  Metric (kg,cm)  "
        android:textColor="@color/fav"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/choose_unit_for_weight_imperial"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_in_top_of_add_entry_bottom_sheet" />

    <Button
        android:id="@+id/choose_unit_for_weight_imperial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/color_for_botton_off"
        android:text="  Imperial (Ib,in)  "
        android:textColor="@color/fav"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/choose_unit_for_weight_metric"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/choose_unit_for_weight_metric"
        app:layout_constraintTop_toTopOf="@+id/choose_unit_for_weight_metric" />

    <EditText
        android:id="@+id/enter_weight_or_height_full_edit_text_in_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/fav"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:textColor="@color/fav"
        android:theme="@style/SwitchTheme"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_in_top_of_add_entry_bottom_sheet" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_to_show_imperial_system_height_in_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/text_in_top_of_add_entry_bottom_sheet">

        <EditText
            android:id="@+id/edit_text_for_height_foot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fav"
            android:gravity="center"
            android:hint="ft"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/fav"
            android:theme="@style/SwitchTheme"
            android:ems="3"
            app:layout_constraintEnd_toStartOf="@+id/one_quote_before_middle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/one_quote_before_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'"
            android:textColor="@color/fav"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/vertical_line_in_the_middle"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vertical_line_in_the_middle"
            android:layout_width="0.1dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_text_for_height_inch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fav"
            android:gravity="center"
            android:hint="inch"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@color/fav"
            android:theme="@style/SwitchTheme"
            android:ems="3"
            app:layout_constraintEnd_toStartOf="@+id/one_quote_in_the_end"
            app:layout_constraintStart_toEndOf="@+id/vertical_line_in_the_middle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/one_quote_in_the_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='"'
            android:textColor="@color/fav"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button_ok_in_add_entry_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/fav"
        android:text="ok"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_weight_or_height_full_edit_text_in_sheet" />

    <View
        android:id="@+id/back_button_in_the_journal_emergency"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_arrow_back_24"
        android:elevation="100dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_to_go_back_counter"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_button_for_trash"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/horizantal_straight_line_before_view_history"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_goal_in_bottom_sheet_weight_tracker" />

    <Button
        android:id="@+id/view_history_button_in_weight_tracekr"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="View History"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizantal_straight_line_before_view_history" />
</androidx.constraintlayout.widget.ConstraintLayout>