<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_to_show_reminder_add_new_habit"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12.5dp"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp">

        <TextView
            android:id="@+id/text_saying_the_days_add_reminder_add_new_habit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="Everyday at 8:00 Am"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/pixel_start_of_clock_add_reminder"
            android:gravity="start"
            android:ellipsize="start"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/pixel_start_of_clock_add_reminder"
            android:layout_width="1px"
            android:layout_height="1px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="62.5dp"/>

        <View
            android:id="@+id/pixel_bottom_of_clock_add_reminder"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_marginTop="62.5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/clock_in_add_reminder_recycle_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/schedule_48px"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="@+id/pixel_start_of_clock_add_reminder"
            app:layout_constraintBottom_toTopOf="@+id/pixel_bottom_of_clock_add_reminder"/>

        <Button
            android:id="@+id/delete_bottom_sheet_add_reminder"
            android:layout_width="28.5dp"
            android:layout_height="28.5dp"
            android:layout_marginStart="7.5dp"
            android:layout_marginBottom="7.5dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:foreground="@drawable/z_pink"
            android:foregroundTint="#ECECEC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/delete_view_in_add_reminder_bottom_sheet"
            android:layout_width="12.5dp"
            android:layout_height="12.5dp"
            android:background="@drawable/close_48px"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:outlineProvider="none"
            app:layout_constraintStart_toStartOf="@+id/delete_bottom_sheet_add_reminder"
            app:layout_constraintEnd_toEndOf="@+id/delete_bottom_sheet_add_reminder"
            app:layout_constraintTop_toTopOf="@+id/delete_bottom_sheet_add_reminder"
            app:layout_constraintBottom_toBottomOf="@+id/delete_bottom_sheet_add_reminder"/>

        <Button
            android:id="@+id/edit_bottom_sheet_add_reminder"
            android:layout_width="28.5dp"
            android:layout_height="28.5dp"
            android:layout_marginStart="7.5dp"
            android:layout_marginBottom="7.5dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:foreground="@drawable/z_pink"
            android:foregroundTint="#ECECEC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/delete_bottom_sheet_add_reminder" />

        <View
            android:id="@+id/edit_view_in_add_reminder_bottom_sheet"
            android:layout_width="12.5dp"
            android:layout_height="12.5dp"
            android:background="@drawable/edit_button_white"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:outlineProvider="none"
            app:layout_constraintStart_toStartOf="@+id/edit_bottom_sheet_add_reminder"
            app:layout_constraintEnd_toEndOf="@+id/edit_bottom_sheet_add_reminder"
            app:layout_constraintTop_toTopOf="@+id/edit_bottom_sheet_add_reminder"
            app:layout_constraintBottom_toBottomOf="@+id/edit_bottom_sheet_add_reminder"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>