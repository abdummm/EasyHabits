<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/chat_bubble_sender"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/chat_get_message"
        app:layout_constraintBottom_toBottomOf="@+id/view_bottom_left"
        app:layout_constraintEnd_toStartOf="@+id/line_got_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_top_left" />

    <TextView
        android:id="@+id/text_from_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/fav"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/chat_bubble_from_me"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/chat_send_message"
        app:layout_constraintBottom_toBottomOf="@+id/view_bottom_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/line_send_left"
        app:layout_constraintTop_toTopOf="@+id/view_top_right" />

    <TextView
        android:id="@+id/text_saying_secomd_example_hey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_got_right"
        android:layout_width="0.1dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_bubble_sender"
        app:layout_constraintStart_toEndOf="@+id/text_from_sender"
        app:layout_constraintTop_toTopOf="@+id/chat_bubble_sender" />

    <View
        android:id="@+id/line_send_left"
        android:layout_width="0.1dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/chat_bubble_sender"
        app:layout_constraintEnd_toStartOf="@+id/text_saying_secomd_example_hey"
        app:layout_constraintTop_toTopOf="@+id/chat_bubble_sender" />

    <View
        android:id="@+id/view_top_left"
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@+id/text_from_sender"
        app:layout_constraintEnd_toEndOf="@+id/chat_bubble_sender"
        app:layout_constraintStart_toStartOf="@+id/chat_bubble_sender" />

    <View
        android:id="@+id/view_bottom_left"
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/text_from_sender"
        app:layout_constraintEnd_toEndOf="@+id/chat_bubble_sender"
        app:layout_constraintStart_toStartOf="@+id/chat_bubble_sender" />

    <View
        android:id="@+id/view_top_right"
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@+id/text_saying_secomd_example_hey"
        app:layout_constraintEnd_toEndOf="@+id/chat_bubble_from_me"
        app:layout_constraintStart_toStartOf="@+id/chat_bubble_from_me" />

    <View
        android:id="@+id/view_bottom_right"
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/text_saying_secomd_example_hey"
        app:layout_constraintEnd_toEndOf="@+id/chat_bubble_from_me"
        app:layout_constraintStart_toStartOf="@+id/chat_bubble_from_me" />

    <TextView
        android:id="@+id/text_sending_message_in_recycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/fav"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>