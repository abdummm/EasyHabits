<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_to_show_bad_habits_in_home_main"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="25dp"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_in_card_of_the_habit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/pizel_at_the_end_of_the_icon"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back_ground_of_emoji_fifty_color"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/circle_with_color_at_the_end_of_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/z_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pizel_at_the_end_of_the_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/back_ground_of_emoji_fifty_color"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/round_square_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/emoji_text_view_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:emojiSize="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/back_ground_of_emoji_fifty_color"
            app:layout_constraintEnd_toEndOf="@+id/back_ground_of_emoji_fifty_color"
            app:layout_constraintStart_toStartOf="@+id/back_ground_of_emoji_fifty_color"
            app:layout_constraintTop_toTopOf="@+id/back_ground_of_emoji_fifty_color" />

        <TextView
            android:id="@+id/text_with_name_of_the_habit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/white_back_ground_for_the_checkat_the_far_right"
            app:layout_constraintStart_toEndOf="@+id/pizel_at_the_end_of_the_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_with_quantity_of_habit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/white_back_ground_for_check_1"
            app:layout_constraintStart_toEndOf="@+id/pizel_at_the_end_of_the_icon" />

        <Button
            android:id="@+id/white_back_ground_for_the_checkat_the_far_right"
            android:layout_width="42.5dp"
            android:layout_height="42.5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_square_background"
            android:foreground="@drawable/round_corner_selectable"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/check_mark_5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/check_48px"
            android:backgroundTint="@color/black"
            android:elevation="10dp"
            android:outlineProvider="none"
            app:layout_constraintBottom_toBottomOf="@+id/white_back_ground_for_the_checkat_the_far_right"
            app:layout_constraintEnd_toEndOf="@+id/white_back_ground_for_the_checkat_the_far_right"
            app:layout_constraintStart_toStartOf="@+id/white_back_ground_for_the_checkat_the_far_right"
            app:layout_constraintTop_toTopOf="@+id/white_back_ground_for_the_checkat_the_far_right" />

        <View
            android:id="@+id/white_back_ground_for_check_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/round_square_background_for_small_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/white_back_ground_for_the_checkat_the_far_right" />

        <View
            android:id="@+id/check_mark_4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/check_48px"
            android:backgroundTint="#00B900"
            app:layout_constraintBottom_toBottomOf="@+id/white_back_ground_for_check_4"
            app:layout_constraintEnd_toEndOf="@+id/white_back_ground_for_check_4"
            app:layout_constraintStart_toStartOf="@+id/white_back_ground_for_check_4"
            app:layout_constraintTop_toTopOf="@+id/white_back_ground_for_check_4" />

        <View
            android:id="@+id/white_back_ground_for_check_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/round_square_background_for_small_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/white_back_ground_for_check_4" />

        <View
            android:id="@+id/check_mark_3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/close_48px"
            android:backgroundTint="#D10000"
            app:layout_constraintBottom_toBottomOf="@+id/white_back_ground_for_check_3"
            app:layout_constraintEnd_toEndOf="@+id/white_back_ground_for_check_3"
            app:layout_constraintStart_toStartOf="@+id/white_back_ground_for_check_3"
            app:layout_constraintTop_toTopOf="@+id/white_back_ground_for_check_3" />

        <View
            android:id="@+id/white_back_ground_for_check_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/round_square_background_for_small_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/white_back_ground_for_check_3" />

        <View
            android:id="@+id/check_mark_2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle_20px"
            app:layout_constraintBottom_toBottomOf="@+id/white_back_ground_for_check_2"
            app:layout_constraintEnd_toEndOf="@+id/white_back_ground_for_check_2"
            app:layout_constraintStart_toStartOf="@+id/white_back_ground_for_check_2"
            app:layout_constraintTop_toTopOf="@+id/white_back_ground_for_check_2" />

        <View
            android:id="@+id/white_back_ground_for_check_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/round_square_background_for_small_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/white_back_ground_for_check_2" />

        <View
            android:id="@+id/check_mark_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle_20px"
            app:layout_constraintBottom_toBottomOf="@+id/white_back_ground_for_check_1"
            app:layout_constraintEnd_toEndOf="@+id/white_back_ground_for_check_1"
            app:layout_constraintStart_toStartOf="@+id/white_back_ground_for_check_1"
            app:layout_constraintTop_toTopOf="@+id/white_back_ground_for_check_1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
