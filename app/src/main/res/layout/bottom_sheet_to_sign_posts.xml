<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_saying_sign_in_without_writing_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Sign in to be able to write posts!!"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_to_enter_name_for_account_in_online_post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Enter your name"
        android:gravity="center"
        android:theme="@style/SwitchTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_saying_sign_in_without_writing_posts" />

    <TextView
        android:id="@+id/text_view_under_edit_text_saying_name_is_visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please note that your name will be visible online"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_to_enter_name_for_account_in_online_post" />

    <CheckBox
        android:id="@+id/text_box_sating_i_agree_to_terms_and_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hyper_link_string_and_terrm_and_condition"
        android:layout_marginTop="15dp"
        android:textColor="@color/fav"
        android:textSize="12sp"
        android:textStyle="bold"
        android:buttonTint="@color/fav"
        android:autoLink="web"
        android:linksClickable="true"
        android:textColorLink="#007bff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_under_edit_text_saying_name_is_visible" />
    <Button
        android:id="@+id/sign_in_with_google_in_posts"
        android:layout_marginTop="12dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="Sign in with Google"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintTop_toBottomOf="@+id/text_box_sating_i_agree_to_terms_and_services" />

    <View
        android:id="@+id/horizantal_straight_line_1"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_with_google_in_posts" />

    <Button
        android:id="@+id/continue_without_signing_in_in_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="@drawable/ripple_for_all"
        android:textColor="@color/fav"
        style="?android:attr/borderlessButtonStyle"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/horizantal_straight_line_1"/>

    <View
        android:id="@+id/invisible_thing_in_the_botton_for_bottom_sheet_card"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="7.5dp"
        app:layout_constraintTop_toBottomOf="@+id/continue_without_signing_in_in_posts"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>