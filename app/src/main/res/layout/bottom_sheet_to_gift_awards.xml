<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_to_buy_more_coins_in_awards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fav"
            android:text="Buy Coins"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/start_drawable_for_number_of_coins"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/line_in_awards_bottom_sheet"/>

        <TextView
            android:id="@+id/gift_an_award_in_awards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gift an award!!"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/start_drawable_for_number_of_coins"
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:background="@drawable/start_awards_part_posts_item"
            app:layout_constraintBottom_toTopOf="@+id/line_in_awards_bottom_sheet"
            app:layout_constraintEnd_toStartOf="@+id/middle_drawable_for_number_of_coins"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/middle_drawable_for_number_of_coins"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:background="#f2f3f5"
            app:layout_constraintStart_toStartOf="@+id/text_saying_number_of_coins"
            app:layout_constraintBottom_toTopOf="@+id/line_in_awards_bottom_sheet"
            app:layout_constraintEnd_toStartOf="@+id/end_drawable_for_number_of_coins"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/margin_for_the_grey_middle_in_start"
            android:layout_width="0.1dp"
            android:layout_height="0.1dp"
            app:layout_constraintEnd_toStartOf="@+id/text_saying_number_of_coins"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp"/>

        <View
            android:id="@+id/end_drawable_for_number_of_coins"
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:background="@drawable/end_awards_post_items"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toTopOf="@+id/line_in_awards_bottom_sheet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_saying_number_of_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="0 coins"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/middle_drawable_for_number_of_coins"
            app:layout_constraintBottom_toBottomOf="@+id/middle_drawable_for_number_of_coins"/>

        <View
            android:id="@+id/line_in_awards_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="#808080"
            app:layout_constraintTop_toBottomOf="@+id/gift_an_award_in_awards"/>


        <View
            android:id="@+id/thirty_three_percent_divider_in_the_card_awards"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.33"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/sixty_six_percent_divider_in_the_card_awards"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.66"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_to_give_silver_award"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="@drawable/ripple_for_all"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/thirty_three_percent_divider_in_the_card_awards"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_in_awards_bottom_sheet" />

        <View
            android:id="@+id/silver_award_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center_horizontal"
            android:background="@drawable/silver_award_png"
            app:layout_constraintBottom_toBottomOf="@+id/button_to_give_silver_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_silver_award"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_silver_award"
            app:layout_constraintTop_toTopOf="@+id/button_to_give_silver_award" />

        <TextView
            android:id="@+id/text_saying_silver_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gift Silver award"
            android:layout_marginBottom="10dp"
            android:textColor="@color/fav"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/silver_award_image"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_silver_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_silver_award"/>

        <TextView
            android:id="@+id/text_saying_teh_price_of_silver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 coins"
            android:layout_marginTop="10dp"
            android:textColor="@color/fav"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/silver_award_image"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_silver_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_silver_award"/>

        <Button
            android:id="@+id/button_to_give_gold_award"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="@drawable/ripple_for_all"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/sixty_six_percent_divider_in_the_card_awards"
            app:layout_constraintStart_toEndOf="@+id/thirty_three_percent_divider_in_the_card_awards"
            app:layout_constraintTop_toBottomOf="@+id/line_in_awards_bottom_sheet" />

        <View
            android:id="@+id/gold_award_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center_horizontal"
            android:background="@drawable/gold_award_png"
            app:layout_constraintBottom_toBottomOf="@+id/button_to_give_gold_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_gold_award"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_gold_award"
            app:layout_constraintTop_toTopOf="@+id/button_to_give_gold_award" />

        <TextView
            android:id="@+id/text_saying_gold_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gift Gold award"
            android:layout_marginBottom="10dp"
            android:textColor="@color/fav"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/gold_award_image"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_gold_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_gold_award"/>

        <TextView
            android:id="@+id/text_saying_teh_price_of_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 coins"
            android:layout_marginTop="10dp"
            android:textColor="@color/fav"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/gold_award_image"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_gold_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_gold_award"/>

        <Button
            android:id="@+id/button_to_give_plat_award"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="@drawable/ripple_for_all"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sixty_six_percent_divider_in_the_card_awards"
            app:layout_constraintTop_toBottomOf="@+id/line_in_awards_bottom_sheet" />

        <View
            android:id="@+id/plat_award_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center_horizontal"
            android:background="@drawable/ic_plat_award_posts"
            app:layout_constraintBottom_toBottomOf="@+id/button_to_give_plat_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_plat_award"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_plat_award"
            app:layout_constraintTop_toTopOf="@+id/button_to_give_plat_award" />

        <TextView
            android:id="@+id/text_saying_plat_month"
