            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center_horizontal"
            android:textColor="@color/fav"
            android:textStyle="bold"
            android:textSize="65sp"
            app:layout_constraintBottom_toBottomOf="@+id/button_to_give_one_month_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_one_month_award"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_one_month_award"
            app:layout_constraintTop_toTopOf="@+id/button_to_give_one_month_award" />

        <TextView
            android:id="@+id/text_saying_one_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gift one month\n of premium"
            android:layout_marginBottom="10dp"
            android:textColor="@color/fav"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/one_month_award_image"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_one_month_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_one_month_award"/>

        <TextView
            android:id="@+id/text_saying_teh_price_of_one_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_marginTop="10dp"
            android:textColor="@color/fav"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/one_month_award_image"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_one_month_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_one_month_award"/>

        <Button
            android:id="@+id/button_to_give_three_month_award"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="@drawable/ripple_for_all"
            app:layout_constraintEnd_toStartOf="@+id/sixty_six_percent_divider_in_the_card_awards"
            app:layout_constraintStart_toEndOf="@+id/thirty_three_percent_divider_in_the_card_awards"
            app:layout_constraintTop_toBottomOf="@+id/button_to_give_silver_award" />

        <TextView
            android:id="@+id/three_month_award_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:gravity="center_horizontal"
            android:textColor="@color/fav"
            android:textStyle="bold"
            android:textSize="65sp"
            app:layout_constraintBottom_toBottomOf="@+id/button_to_give_three_month_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_three_month_award"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_three_month_award"
            app:layout_constraintTop_toTopOf="@+id/button_to_give_three_month_award" />

        <TextView
            android:id="@+id/text_saying_three_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gift three months\n of premium"
            android:layout_marginBottom="10dp"
            android:textColor="@color/fav"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/three_month_award_image"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_three_month_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_three_month_award"/>

        <TextView
            android:id="@+id/text_saying_teh_price_of_three_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_marginTop="10dp"
            android:textColor="@color/fav"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/three_month_award_image"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_three_month_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_three_month_award"/>

        <Button
            android:id="@+id/button_to_give_six_month_award"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="@drawable/ripple_for_all"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sixty_six_percent_divider_in_the_card_awards"
            app:layout_constraintTop_toBottomOf="@+id/button_to_give_silver_award" />

        <TextView
            android:id="@+id/six_month_award_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:gravity="center_horizontal"
            android:textColor="@color/fav"
            android:textStyle="bold"
            android:textSize="65sp"
            app:layout_constraintBottom_toBottomOf="@+id/button_to_give_six_month_award"
            app:layout_constraintEnd_toEndOf="@+id/button_to_give_six_month_award"
            app:layout_constraintStart_toStartOf="@+id/button_to_give_six_month_award"
            app:layout_constraintTop_toTopOf="@+id/button_to_give_six_month_award" />

        <TextView
            android:id="@+id/text_saying_six_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gift six months\n of premium"
