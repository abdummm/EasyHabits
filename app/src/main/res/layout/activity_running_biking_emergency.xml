<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Running_biking_emergency">

    <Button
        android:id="@+id/button_to_press_on_add_counter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button_color_any_size"
        app:layout_constraintBottom_toBottomOf="@+id/circle_button_counter_view"
        app:layout_constraintEnd_toEndOf="@+id/circle_button_counter_view"
        app:layout_constraintStart_toStartOf="@+id/circle_button_counter_view"
        app:layout_constraintTop_toTopOf="@+id/circle_button_counter_view" />

    <View
        android:id="@+id/circle_button_counter_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/z_dark_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_showing_number_of_counter_in_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="100dp"
        android:text="Start"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_to_press_on_add_counter"
        app:layout_constraintEnd_toEndOf="@+id/button_to_press_on_add_counter"
        app:layout_constraintStart_toStartOf="@+id/button_to_press_on_add_counter"
        app:layout_constraintTop_toTopOf="@+id/button_to_press_on_add_counter" />

    <TextView
        android:id="@+id/text_in_top_of_running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Running / Biking"
        android:textColor="@color/fav"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/button_to_press_on_add_counter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_for_layout_in_the_middle_of_running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/time_to_tell_running_biking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Time: "
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pace_to_tell_running_biking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Pace: "
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_to_tell_running_biking" />

        <TextView
            android:id="@+id/distance_to_tell_running_biking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Distance: "
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pace_to_tell_running_biking" />

        <TextView
            android:id="@+id/speed_to_tell_running_biking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Speed: "
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/distance_to_tell_running_biking" />

        <TextView
            android:id="@+id/calories_to_tell_running_biking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Calories: "
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/speed_to_tell_running_biking" />

        <TextView
            android:id="@+id/steps_to_tell_running_biking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Steps: "
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calories_to_tell_running_biking" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buutton_for_running_running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fav"
        android:text="Running"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_for_biking_running"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_for_biking_running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fav"
        android:text="Cycling"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buutton_for_running_running"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/finish_button_in_running_or_biking"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text=" Finish "
        android:textColor="#DC143C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_button_counter_view" />

    <Button
        android:id="@+id/button_to_add_three_dots"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/round_button_for_trash"
        app:layout_constraintBottom_toBottomOf="@+id/three_buttons_in_the_top_to_add"
        app:layout_constraintEnd_toEndOf="@+id/three_buttons_in_the_top_to_add"
        app:layout_constraintStart_toStartOf="@+id/three_buttons_in_the_top_to_add"
        app:layout_constraintTop_toTopOf="@+id/three_buttons_in_the_top_to_add" />

    <View
        android:id="@+id/three_buttons_in_the_top_to_add"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/round_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_to_ask_for_height_and_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_for_layout_in_the_middle_of_running">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutfor_weight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/weight_text_before_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight:"
                android:textColor="@color/fav"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/edit_text_to_get_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ems="2"
                android:inputType="number"
                android:maxLength="3"
                android:text=""
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/fav"
                android:textColorHint="@color/fav"
                android:theme="@style/SwitchTheme"
                app:layout_constraintStart_toEndOf="@+id/weight_text_before_edit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Spinner
                android:id="@+id/spinner_to_listen_kilo_or_pound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/edit_text_to_get_weight"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_for_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayoutfor_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/height_text_before_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height:"
                android:textColor="@color/fav"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/edit_text_to_get_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ems="2"
                android:inputType="number"
                android:maxLength="3"
                android:text=""
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/fav"
                android:textColorHint="@color/fav"
                android:theme="@style/SwitchTheme"
                app:layout_constraintStart_toEndOf="@+id/height_text_before_edit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/height_text_after_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centimeters"
                android:textColor="@color/fav"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edit_text_to_get_height"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/texting_saying_congrats_in_running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congrats!! You did it"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/id_for_layout_in_the_middle_of_running"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_in_top_of_running" />
</androidx.constraintlayout.widget.ConstraintLayout>