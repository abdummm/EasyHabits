<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_to_add_another_counter"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="Add another counter"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/add_another_journal_icon_in_bottom_journal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/round_add_box_24"
        app:layout_constraintBottom_toBottomOf="@+id/button_to_add_another_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_to_add_another_counter" />

    <View
        android:id="@+id/horizantal_straight_line_1"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_to_add_another_counter" />

    <Button
        android:id="@+id/button_to_delete_counter"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="Delete Counter"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizantal_straight_line_1" />

    <View
        android:id="@+id/delete_icon_in_bottom_journal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/baseline_delete_dark_green"
        app:layout_constraintBottom_toBottomOf="@+id/button_to_delete_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_to_delete_counter" />
    <View
        android:id="@+id/horizantal_straight_line_2"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_to_delete_counter" />
    <Button
        android:id="@+id/button_to_switch_counter"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="Switch Counter"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizantal_straight_line_2" />

    <View
        android:id="@+id/switch_icon_in_bottom_journal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/round_code_24"
        app:layout_constraintBottom_toBottomOf="@+id/button_to_switch_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_to_switch_counter" />
</androidx.constraintlayout.widget.ConstraintLayout>