<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/select_all_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="Select All"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/horizantal_straight_line_1"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_all_button" />

    <Button
        android:id="@+id/copy_text_only_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="Copy All (text only)"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizantal_straight_line_1" />

    <View
        android:id="@+id/horizantal_straight_line_2"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/copy_text_only_button" />

    <Button
        android:id="@+id/add_another_journal_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="Add Another Journal"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizantal_straight_line_2" />

    <View
        android:id="@+id/horizantal_straight_line_3"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_another_journal_button" />

    <Button
        android:id="@+id/delete_journal_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="Delete Journal"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizantal_straight_line_3" />

    <Button
        android:id="@+id/switch_journal_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_for_all"
        android:text="Switch to Another Journal"
        android:textAllCaps="false"
        android:textColor="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizantal_straight_line_4" />

    <View
        android:id="@+id/horizantal_straight_line_4"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@color/fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_journal_button" />

    <View
        android:id="@+id/select_all_icon_in_bottom_journal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/round_view_headline_24"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/select_all_button"
        app:layout_constraintTop_toTopOf="@+id/select_all_button" />

    <View
        android:id="@+id/copy_all_icon_in_bottom_journal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/round_content_copy_24"
        app:layout_constraintBottom_toBottomOf="@+id/copy_text_only_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/copy_text_only_button" />

    <View
        android:id="@+id/add_another_journal_icon_in_bottom_journal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/round_add_box_24"
        app:layout_constraintBottom_toBottomOf="@+id/add_another_journal_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_another_journal_button" />

    <View
        android:id="@+id/delete_icon_in_bottom_journal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/baseline_delete_dark_green"
        app:layout_constraintBottom_toBottomOf="@+id/delete_journal_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/delete_journal_button" />

    <View
        android:id="@+id/switch_icon_in_bottom_journal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/round_code_24"
        app:layout_constraintBottom_toBottomOf="@+id/switch_journal_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/switch_journal_button" />

</androidx.constraintlayout.widget.ConstraintLayout>