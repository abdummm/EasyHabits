<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment_id_for_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    tools:context=".home_fragment">

    <TextView
        android:id="@+id/text_saying_habits_at_the_top_of_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habits"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_to_set_up_habits_in_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:overScrollMode="always"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_saying_you_dont_have_any_habits_in_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You didn't add any habits to track yet.\n To add habits click the &quot;+&quot; above."
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/plus_view_in_home_to_add_new_habit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/add_48px"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toTopOf="@+id/text_saying_habits_at_the_top_of_home"
        app:layout_constraintBottom_toBottomOf="@+id/text_saying_habits_at_the_top_of_home"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_to_add_new_habit_in_home"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="@+id/plus_view_in_home_to_add_new_habit"
        app:layout_constraintTop_toTopOf="@+id/plus_view_in_home_to_add_new_habit"
        app:layout_constraintBottom_toBottomOf="@+id/plus_view_in_home_to_add_new_habit"
        app:layout_constraintEnd_toEndOf="@+id/plus_view_in_home_to_add_new_habit"/>

    <View
        android:id="@+id/top_of_recycle_view"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_saying_habits_at_the_top_of_home"/>

    <View
        android:id="@+id/fifth_day_start_recycle_view_date"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginEnd="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/fifth_day_end_recycle_view_date"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginEnd="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/fourth_day_end_recycle_view_date"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginEnd="79dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/fourth_day_start_recycle_view_date"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginEnd="99dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/third_day_end_recycle_view_date"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginEnd="104dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/third_day_start_recycle_view_date"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginEnd="124dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/second_day_end_recycle_view_date"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginEnd="129dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/second_day_start_recycle_view_date"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginEnd="149dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/first_day_end_recycle_view_date"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginEnd="154dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/first_day_start_recycle_view_date"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginEnd="174dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/fifth_day_date_recycle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Jul\n2"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/top_of_recycle_view"
        app:layout_constraintEnd_toEndOf="@+id/fifth_day_end_recycle_view_date"
        app:layout_constraintStart_toStartOf="@+id/fifth_day_start_recycle_view_date"
        app:layout_constraintTop_toBottomOf="@+id/button_to_add_new_habit_in_home" />

    <TextView
        android:id="@+id/fourth_day_date_recycle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Jul\n2"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/top_of_recycle_view"
        app:layout_constraintEnd_toEndOf="@+id/fourth_day_end_recycle_view_date"
        app:layout_constraintStart_toStartOf="@+id/fourth_day_start_recycle_view_date"
        app:layout_constraintTop_toBottomOf="@+id/button_to_add_new_habit_in_home" />

    <TextView
        android:id="@+id/third_day_date_recycle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Jul\n2"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/top_of_recycle_view"
        app:layout_constraintEnd_toEndOf="@+id/third_day_end_recycle_view_date"
        app:layout_constraintStart_toStartOf="@+id/third_day_start_recycle_view_date"
        app:layout_constraintTop_toBottomOf="@+id/button_to_add_new_habit_in_home" />

    <TextView
        android:id="@+id/second_day_date_recycle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Jul\n2"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/top_of_recycle_view"
        app:layout_constraintEnd_toEndOf="@+id/second_day_end_recycle_view_date"
        app:layout_constraintStart_toStartOf="@+id/second_day_start_recycle_view_date"
        app:layout_constraintTop_toBottomOf="@+id/button_to_add_new_habit_in_home" />

    <TextView
        android:id="@+id/firtst_day_date_recycle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Jul\n2"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/top_of_recycle_view"
        app:layout_constraintEnd_toEndOf="@+id/first_day_end_recycle_view_date"
        app:layout_constraintStart_toStartOf="@+id/first_day_start_recycle_view_date"
        app:layout_constraintTop_toBottomOf="@+id/button_to_add_new_habit_in_home" />

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfetti_for_completing_the_habit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>