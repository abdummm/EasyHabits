<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context="com.easyhabitsapp2.android.Show_image_post">

    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/image_base_64_base_for_post_show_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/back_button_in_photo_for_base_64_post"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:translationZ="100dp"
        android:background="@drawable/arrow_back_in_white_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/back_button_in_base_64_image_view"
        android:layout_width="38dp"
        android:layout_height="38dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/ripple_button_fav_any_circle"
        app:layout_constraintStart_toStartOf="@+id/back_button_in_photo_for_base_64_post"
        app:layout_constraintEnd_toEndOf="@+id/back_button_in_photo_for_base_64_post"
        app:layout_constraintBottom_toBottomOf="@+id/back_button_in_photo_for_base_64_post"
        app:layout_constraintTop_toTopOf="@+id/back_button_in_photo_for_base_64_post"/>

</androidx.constraintlayout.widget.ConstraintLayout>