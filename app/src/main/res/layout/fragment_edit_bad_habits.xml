<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_habit_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_to_show_in_edit_habit_bad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_saying_that_you_are_creating_a_new_habit_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Update a bad habit"
            android:textColor="@color/fav"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/horizontal_line_under_the_main_good_habits"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/fav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_saying_that_you_are_creating_a_new_habit_top" />

        <Button
            android:id="@+id/submit_data_first_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:backgroundTint="#607D8B"
            android:text="Change the habit"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_line_under_the_main_good_habits" />

        <EditText
            android:id="@+id/edit_text_showing_habit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/fav"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="habit name"
            android:inputType="textPersonName"
            android:textColor="@color/fav"
            android:theme="@style/SwitchTheme"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/submit_data_first_time_button" />

        <TextView
            android:id="@+id/text_to_sayy_enter_time_of_last_relapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When was the last time you did this habit?"
            android:textColor="@color/fav"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="14.5sp"
            app:layout_constraintEnd_toEndOf="@+id/view_showing_the_icon_and_its_color"
            app:layout_constraintStart_toStartOf="@+id/view_showing_the_icon_and_its_color"
            app:layout_constraintTop_toBottomOf="@+id/button_that_will_open_time_user_hacked" />

        <Button
            android:id="@+id/button_that_will_open_time_user_hacked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Choose date"
            android:textColor="@color/white"
            android:backgroundTint="#607D8B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_showing_habit_name" />

        <TextView
            android:id="@+id/number_one_in_habit_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textColor="@color/fav"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/submit_data_first_time_button"
            app:layout_constraintEnd_toEndOf="@+id/number_two_in_habit_activity"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="@+id/number_two_in_habit_activity"
            app:layout_constraintTop_toTopOf="@+id/submit_data_first_time_button" />

        <TextView
            android:id="@+id/number_two_in_habit_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2."
            android:textColor="@color/fav"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_that_will_open_time_user_hacked"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_that_will_open_time_user_hacked" />

        <TextView
            android:id="@+id/number_three_in_habit_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3."
            android:textColor="@color/fav"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/layout_that_contains_goal_for_habits"
            app:layout_constraintEnd_toEndOf="@+id/number_two_in_habit_activity"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="@+id/number_two_in_habit_activity"
            app:layout_constraintTop_toTopOf="@+id/layout_that_contains_goal_for_habits" />

        <TextView
            android:id="@+id/number_four_in_habit_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4."
            android:textColor="@color/fav"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/button_to_choose_color_of_new_good_habit"
            app:layout_constraintEnd_toEndOf="@+id/number_two_in_habit_activity"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="@+id/number_two_in_habit_activity"
            app:layout_constraintTop_toTopOf="@+id/button_to_choose_color_of_new_good_habit" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_that_contains_goal_for_habits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_to_sayy_enter_time_of_last_relapse">

            <EditText
                android:id="@+id/enter_goal_for_new_good_habit_in_habits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/fav"
                android:ellipsize="start"
                android:ems="5"
                android:gravity="center_horizontal"
                android:hint="Goal"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@color/fav"
                android:theme="@style/SwitchTheme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_saying_days_beside_habit_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text=" days"
                android:textColor="@color/fav"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/enter_goal_for_new_good_habit_in_habits"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button_to_choose_color_of_new_good_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:backgroundTint="@color/fav"
            android:text="Choose Color"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_that_contains_goal_for_habits" />

        <Button
            android:id="@+id/button_to_choose_icon_of_the_new_good_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:backgroundTint="@color/fav"
            android:text="Pick Icon"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_to_choose_color_of_new_good_habit" />

        <TextView
            android:id="@+id/number_five_in_habit_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5."
            android:textColor="@color/fav"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/button_to_choose_icon_of_the_new_good_habit"
            app:layout_constraintEnd_toEndOf="@+id/number_two_in_habit_activity"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="@+id/number_two_in_habit_activity"
            app:layout_constraintTop_toTopOf="@+id/button_to_choose_icon_of_the_new_good_habit" />

        <View
            android:id="@+id/view_showing_the_icon_and_its_color"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/z_dark_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_to_choose_icon_of_the_new_good_habit" />

        <View
            android:id="@+id/showing_icon_in_color_good_habits"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@+id/view_showing_the_icon_and_its_color"
            app:layout_constraintEnd_toEndOf="@+id/view_showing_the_icon_and_its_color"
            app:layout_constraintStart_toStartOf="@+id/view_showing_the_icon_and_its_color"
            app:layout_constraintTop_toTopOf="@+id/view_showing_the_icon_and_its_color" />

        <TextView
            android:id="@+id/text_view_asying_this_is_example_of_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="A preview of the icon and color"
            android:textColor="@color/fav"
            app:layout_constraintEnd_toEndOf="@+id/view_showing_the_icon_and_its_color"
            app:layout_constraintStart_toStartOf="@+id/view_showing_the_icon_and_its_color"
            app:layout_constraintTop_toBottomOf="@+id/view_showing_the_icon_and_its_color" />


        <Button
            android:id="@+id/button_to_submit_good_habit_in_habits"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="15dp"
            android:text=" Update "
            android:textColor="@color/fav"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_asying_this_is_example_of_icon" />

        <View
            android:id="@+id/view_under_done_bottom_to_add_screen"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/button_to_submit_good_habit_in_habits"/>

        <Button
            android:id="@+id/button_to_go_back_good_habit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_button_for_trash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/back_button_in_the_good_habit_emergency"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
