<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".post_a_post">

    <View
        android:id="@+id/view_in_the_top_of_post"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_shadow_for_back_button_post"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/round_button_for_trash"
        app:layout_constraintEnd_toEndOf="@+id/back_button_in_the_post_emergency"
        app:layout_constraintStart_toStartOf="@+id/back_button_in_the_post_emergency"
        app:layout_constraintTop_toTopOf="@+id/back_button_in_the_post_emergency" />

    <Button
        android:id="@+id/button_shadow_for_text_size_button_post"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/round_button_for_trash"
        app:layout_constraintBottom_toBottomOf="@+id/change_size_in_the_post_emergency"
        app:layout_constraintEnd_toEndOf="@+id/change_size_in_the_post_emergency"
        app:layout_constraintStart_toStartOf="@+id/change_size_in_the_post_emergency"
        app:layout_constraintTop_toTopOf="@+id/change_size_in_the_post_emergency" />

    <Button
        android:id="@+id/button_shadow_for_color_button_post"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/round_button_for_trash"
        app:layout_constraintBottom_toBottomOf="@+id/color_in_the_post_emergency"
        app:layout_constraintEnd_toEndOf="@+id/color_in_the_post_emergency"
        app:layout_constraintStart_toStartOf="@+id/color_in_the_post_emergency"
        app:layout_constraintTop_toTopOf="@+id/color_in_the_post_emergency" />

    <Button
        android:id="@+id/button_shadow_for_highlight_button_post"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/round_button_for_trash"
        app:layout_constraintBottom_toBottomOf="@+id/highlight_in_the_post_emergency"
        app:layout_constraintEnd_toEndOf="@+id/highlight_in_the_post_emergency"
        app:layout_constraintStart_toStartOf="@+id/highlight_in_the_post_emergency"
        app:layout_constraintTop_toTopOf="@+id/highlight_in_the_post_emergency" />

    <Button
        android:id="@+id/button_shadow_for_bold_button_post"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/round_button_for_trash"
        app:layout_constraintBottom_toBottomOf="@+id/set_text_to_bold_post"
        app:layout_constraintEnd_toEndOf="@+id/set_text_to_bold_post"
        app:layout_constraintStart_toStartOf="@+id/set_text_to_bold_post"
        app:layout_constraintTop_toTopOf="@+id/set_text_to_bold_post" />

    <Button
        android:id="@+id/button_shadow_for_italic_button_post"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/round_button_for_trash"
        app:layout_constraintBottom_toBottomOf="@+id/set_text_to_italic_post"
        app:layout_constraintEnd_toEndOf="@+id/set_text_to_italic_post"
        app:layout_constraintStart_toStartOf="@+id/set_text_to_italic_post"
        app:layout_constraintTop_toTopOf="@+id/set_text_to_italic_post" />

    <Button
        android:id="@+id/button_shadow_for_under_line_button_post"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/round_button_for_trash"
        app:layout_constraintBottom_toBottomOf="@+id/set_text_to_underline_post"
        app:layout_constraintEnd_toEndOf="@+id/set_text_to_underline_post"
        app:layout_constraintStart_toStartOf="@+id/set_text_to_underline_post"
        app:layout_constraintTop_toTopOf="@+id/set_text_to_underline_post" />

    <Button
        android:id="@+id/button_shadow_for_strike_through_button_post"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/round_button_for_trash"
        app:layout_constraintBottom_toBottomOf="@+id/set_text_to_strike_through_post"
        app:layout_constraintEnd_toEndOf="@+id/set_text_to_strike_through_post"
        app:layout_constraintStart_toStartOf="@+id/set_text_to_strike_through_post"
        app:layout_constraintTop_toTopOf="@+id/set_text_to_strike_through_post" />


    <EditText
        android:id="@+id/text_saying_title_of_the_post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:hint="Title"
        android:imeOptions="actionNext"
        android:inputType="textNoSuggestions|textMultiLine"
        android:maxLength="300"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_to_choose_category_in_the_place_where_you_write_the_post"
        app:layout_goneMarginStart="5dp" />

    <View
        android:id="@+id/back_button_in_the_post_emergency"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/round_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="@+id/view_in_the_top_of_post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_in_the_top_of_post" />

    <View
        android:id="@+id/highlight_in_the_post_emergency"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_highlight_24"
        app:layout_constraintBottom_toBottomOf="@+id/view_in_the_top_of_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_in_the_top_of_post" />

    <View
        android:id="@+id/color_in_the_post_emergency"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_color_lens_24"
        app:layout_constraintBottom_toBottomOf="@+id/view_in_the_top_of_post"
        app:layout_constraintEnd_toStartOf="@+id/highlight_in_the_post_emergency"
        app:layout_constraintTop_toTopOf="@+id/view_in_the_top_of_post" />

    <View
        android:id="@+id/change_size_in_the_post_emergency"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_format_size_24"
        app:layout_constraintBottom_toBottomOf="@+id/view_in_the_top_of_post"
        app:layout_constraintEnd_toStartOf="@+id/color_in_the_post_emergency"
        app:layout_constraintTop_toTopOf="@+id/view_in_the_top_of_post" />

    <EditText
        android:id="@+id/text_view_viewing_the_whole_post"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:gravity="top|start"
        android:hint="Body"
        android:inputType="textNoSuggestions|textMultiLine"
        android:scrollbars="vertical"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/post_button_int_the_bottom_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_saying_title_of_the_post" />


    <View
        android:id="@+id/set_text_to_bold_post"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_format_bold_24"
        app:layout_constraintBottom_toBottomOf="@+id/view_in_the_top_of_post"
        app:layout_constraintEnd_toStartOf="@+id/change_size_in_the_post_emergency"
        app:layout_constraintTop_toTopOf="@+id/view_in_the_top_of_post" />

    <View
        android:id="@+id/set_text_to_italic_post"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_format_italic_24"
        app:layout_constraintBottom_toBottomOf="@+id/view_in_the_top_of_post"
        app:layout_constraintEnd_toStartOf="@+id/set_text_to_bold_post"
        app:layout_constraintTop_toTopOf="@+id/view_in_the_top_of_post" />

    <View
        android:id="@+id/set_text_to_underline_post"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_format_underlined_24"
        app:layout_constraintBottom_toBottomOf="@+id/view_in_the_top_of_post"
        app:layout_constraintEnd_toStartOf="@+id/set_text_to_italic_post"
        app:layout_constraintTop_toTopOf="@+id/view_in_the_top_of_post" />

    <View
        android:id="@+id/set_text_to_strike_through_post"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_strikethrough_s_24"
        app:layout_constraintBottom_toBottomOf="@+id/view_in_the_top_of_post"
        app:layout_constraintEnd_toStartOf="@+id/set_text_to_underline_post"
        app:layout_constraintTop_toTopOf="@+id/view_in_the_top_of_post" />

    <Button
        android:id="@+id/post_button_int_the_bottom_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/fav"
        android:text="Post"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_to_press_to_add_photo_in_post_a_post"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ripple_for_all_circle"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/add_photo_view_at_the_bottom_in_the_left_corner_post"
        app:layout_constraintEnd_toEndOf="@+id/add_photo_view_at_the_bottom_in_the_left_corner_post"
        app:layout_constraintStart_toStartOf="@+id/add_photo_view_at_the_bottom_in_the_left_corner_post"
        app:layout_constraintTop_toTopOf="@+id/add_photo_view_at_the_bottom_in_the_left_corner_post" />

    <View
        android:id="@+id/add_photo_view_at_the_bottom_in_the_left_corner_post"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_add_a_photo_24"
        android:translationZ="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_view_showing_the_photo_befoore_posting_it_in_posts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_viewing_the_whole_post"
        app:layout_constraintEnd_toEndOf="@+id/text_view_viewing_the_whole_post"
        app:layout_constraintStart_toStartOf="@+id/text_view_viewing_the_whole_post"
        app:layout_constraintTop_toTopOf="@+id/text_view_viewing_the_whole_post" />

    <Button
        android:id="@+id/button_to_choose_category_in_the_place_where_you_write_the_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/fav"
        android:text="Choose Category"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/text_saying_title_of_the_post"
        app:layout_constraintTop_toBottomOf="@+id/view_in_the_top_of_post" />

    <CheckBox
        android:id="@+id/check_box_to_check_show_streak_or_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:buttonTint="@color/fav"
        android:text="Show Streak? "
        android:textColor="@color/fav"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/button_to_choose_category_in_the_place_where_you_write_the_post"
        app:layout_constraintEnd_toEndOf="@+id/text_saying_title_of_the_post"
        app:layout_constraintStart_toEndOf="@+id/button_to_choose_category_in_the_place_where_you_write_the_post"
        app:layout_constraintTop_toTopOf="@+id/button_to_choose_category_in_the_place_where_you_write_the_post" />


</androidx.constraintlayout.widget.ConstraintLayout>