        android:id="@+id/choose_categpry_button_in_write_a_comment_to_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Category"
        android:textAllCaps="false"
        android:backgroundTint="@color/fav"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/horizantal_line_at_the_top_below_the_x_button"
        app:layout_constraintStart_toStartOf="parent"/>

    <CheckBox
        android:id="@+id/check_box_to_ask_add_streak_to_comment_in_add_a_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:buttonTint="@color/fav"
        android:text="Show Streak? "
        android:textColor="@color/fav"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/choose_categpry_button_in_write_a_comment_to_add"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_to_enter_comment_in_full_view"
        app:layout_constraintStart_toEndOf="@+id/choose_categpry_button_in_write_a_comment_to_add"
        app:layout_constraintTop_toTopOf="@+id/choose_categpry_button_in_write_a_comment_to_add" />
-->
    <TextView
        android:id="@+id/text_with_name_of_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>