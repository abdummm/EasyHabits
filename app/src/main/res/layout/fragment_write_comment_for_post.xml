<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/write_comment_for_post_id_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.easyhabitsapp2.android.Write_comment_for_post">

    <View
        android:id="@+id/view_at_the_top_action_bar_habits"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_to_post_comment_in_full_comment_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/fav"
        android:text="Post"
        android:textAllCaps="false"
        android:textStyle="bold"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_to_press_x_on_comment_to_go_back"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/ripple_for_all_circle"
        app:layout_constraintBottom_toBottomOf="@+id/view_at_the_top_action_bar_habits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/x_view_to_go_back_in_comment"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/round_clear_24"
        app:layout_constraintBottom_toBottomOf="@+id/button_to_press_x_on_comment_to_go_back"
        app:layout_constraintTop_toTopOf="@+id/button_to_press_x_on_comment_to_go_back"
        app:layout_constraintStart_toStartOf="@+id/button_to_press_x_on_comment_to_go_back"
        app:layout_constraintEnd_toEndOf="@+id/button_to_press_x_on_comment_to_go_back"/>

    <TextView
        android:id="@+id/add_comment_id_in_full_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a comment"
        android:textStyle="bold"
        android:textColor="@color/fav"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_at_the_top_action_bar_habits"
        app:layout_constraintStart_toEndOf="@+id/button_to_press_x_on_comment_to_go_back"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_saying_the_title_or_body_of_post_in_comments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_to_show_full_post_in_write_a_comment"
        app:layout_constraintEnd_toStartOf="@+id/button_to_show_full_post_in_write_a_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_at_the_top_action_bar_habits" />
    <View
        android:id="@+id/horizantal_line_at_the_top_below_the_x_button"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fav"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/button_to_show_full_post_in_write_a_comment"/>

    <EditText
        android:id="@+id/edit_text_to_enter_comment_in_full_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Your Comment"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="start|top"
        android:background="@android:color/transparent"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/horizantal_line_at_the_top_below_the_x_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_saying_the_title_or_body_of_post_in_comments"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_to_show_full_post_in_write_a_comment"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ripple_for_all_circle"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/view_at_the_top_action_bar_habits"/>

    <View
        android:id="@+id/drop_arraow_button_in_comment_view_in_button_in_write_comment"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/round_arrow_forward_ios_24"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="@+id/button_to_show_full_post_in_write_a_comment"
        app:layout_constraintTop_toTopOf="@+id/button_to_show_full_post_in_write_a_comment"
        app:layout_constraintStart_toStartOf="@+id/button_to_show_full_post_in_write_a_comment"
        app:layout_constraintEnd_toEndOf="@+id/button_to_show_full_post_in_write_a_comment"/>

